     const test =  async function enviarFormulario(event) {
        event.preventDefault(); // Evitar que el formulario se envíe de forma tradicional

        const form = event.target;
        const formData = new FormData(form);
        console.log("holasasfdds")
        // Enviar los datos del formulario a la API usando fetch
        try {
          const response = await fetch('../api/send-quotes.ts', {
            method: 'POST',
            body: formData,
          });

          if (response.ok) {
            // Redirigir a la página principal si el envío fue exitoso
            window.location.href = '/';
          } else {
            // Manejar errores en el envío
            alert('Error al enviar el correo. Por favor, inténtalo de nuevo.');
          }
        } catch (error) {
          console.error('Error en la solicitud:', error);
          alert('Error en la solicitud. Por favor, inténtalo de nuevo.');
        }
      }

