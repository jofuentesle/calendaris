---
import Layout from '~/layouts/LandingLayout2.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Img1 from '~/assets/images/pared/ParedRevista.jpg';
import Img2 from '~/assets/images/pared/ParedRevista1.jpg';
import Img3 from '~/assets/images/pared/ParedRevista2.jpg';
import Img4 from '~/assets/images/pared/ParedRevista3.jpg';

const galleryImages = [
    { src: Img1.src, alt: 'Calendario de pared tipo revista 2025' },
    { src: Img2.src, alt: 'Calendario de pared 2025 con espiral, diseño personalizado' },
    { src: Img3.src, alt: 'Calendario tipo revista personalizado para empresas 2025' },
    { src: Img4.src, alt: 'Calendario promocional de pared con espiral 2025' },
];

const metadata = {
  title: "Calendarios Personalizados para Pared | Reprodisseny en Barcelona",
  description: "Compra calendarios tipo revista para pared 2025 personalizados y de alta calidad en Barcelona.",
  keywords: [
    "Calendarios personalizados Barcelona",
    "Calendarios tipo revista para pared 2025",
    "Impresión de calendarios en Barcelona",
    "Calendarios de pared publicitarios",
    "Compra calendarios tipo revista online",
    "Calendarios de empresa 2025",
    "Calendarios de pared personalizados",
    "Calendarios de diseño para empresas",
    "Calendarios de pared de calidad en Barcelona"
  ],
  canonical: "https://calendarios.reprodisseny.com/calendarios-pared-revista",
  jsonLd: {
    "@context": "https://schema.org",
    "@type": "Product",
    "name": "Calendarios de Mesa con Espiral Personalizados ",
    "description": "Personaliza calendarios de mesa personalizados para empresas y oficinas. Perfectos para promocionar tu marca durante todo el año.",
    "image": `${Img1.src}`,
    "brand": {
      "@type": "Brand",
      "name": "Repro Disseny" 
    },
    "offers": {
      "@type": "Offer",
      "url": "https://calendarios.reprodisseny.com/landing/calendario-pared-revista",
      "priceCurrency": "EUR",
      "price": "5.99",
      "availability": "https://schema.org/InStock"
    },
    "keywords": "Calendarios personalizados Barcelona, Calendarios tipo revista para pared 2025, Impresión de calendarios en Barcelona, Calendarios de pared publicitarios, Compra calendarios tipo revista online, Calendarios de empresa 2025, Calendarios de pared personalizados, Calendarios de diseño para empresas, Calendarios de pared de calidad en Barcelona"
  }
};


---
<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Calendario tipo revista"
    title="Calendarios de pared 2025 personalizados"
    subtitle="Impresión de alta calidad y diseño atractivo para promocionar tu marca en Barcelona."
    actions={[
      { variant: 'primary', text: 'Pide tu oferta!', href: '#form-section', icon: 'tabler:square-rounded-arrow-right' },
      { text: 'Saber más', href: '#features' },
    ]}
    galleryImages={galleryImages}
    
  />
  
  
  <Features 
  id="features"
  tagline="Características Clave"
  title="¿Por qué elegir nuestros calendarios de pared"
  subtitle="Impresión de alta calidad y diseño atractivo para promocionar tu marca en Barcelona."
  items={[
    {
      title: 'Impresión Personalizada',
      description: 'Personaliza calendarios tipo revista para pared con tu logotipo y diseño único. Ideales para promociones efectivas en Barcelona.',
      icon: 'tabler:calendar',
    },
    {
      title: 'Alta Calidad de Impresión',
      description:
        'Usamos tecnología de impresión avanzada para asegurar que cada calendario sea visualmente atractivo y duradero.',
      icon: 'tabler:printer',
    },
    {
      title: 'Diseño Promocional',
      description:
        'Destaca tu marca todo el año con nuestros calendarios de pared que combinan funcionalidad y estética.',
      icon: 'tabler:printer',
    },
    {
      title: 'Entrega rápida en toda la península',
      description:
        'Ofrecemos tiempos de entrega rápidos para que recibas tus calendarios cuando los necesites.',
      icon: 'tabler:truck',
    },
    {
      title: 'Ideal para Empresas',
      description:
        'Perfectos para empresas que buscan soluciones publicitarias duraderas y efectivas.',
      icon: 'tabler:building',
    },
    {
      title: 'Fácil Instalación',
      description:
        'Nuestros calendarios con espiral son fáciles de colgar, adaptándose a cualquier espacio de trabajo.',
      icon: 'tabler:wall',
    },
  ]}
/>

       <!-- CallToAction (2/3 width on large screens) -->
          <CallToAction
            title="Solicita tu Presupuesto para Calendarios Personalizados"
            subtitle="Compra calendarios tipo revista para pared y recibe la mejor oferta. Impresión rápida y entrega en toda Barcelona."
            actions={[
                {
                variant: 'primary',
                text: '¡Solicita oferta hoy',
                href: '/formularios/calendarios-pared-revista',
                icon: 'tabler:mail',
                },
              ]}
            />
</Layout>
